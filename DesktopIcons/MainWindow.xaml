<Window x:Class="DesktopIcons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DesktopIcons"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="MainWindow_OnLoaded">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Content="Quick Save" Click="QuickSave"/>
                <Button Content="Quick Load" Click="QuickLoad"/>
                <Button Content="Undo" Click="Undo"/>
            </StackPanel>

            <TextBox x:Name="TextBox" AcceptsReturn="True"/>
        </StackPanel>
    </Grid>
</Window>
